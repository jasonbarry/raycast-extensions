{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "netlify",
  "title": "Netlify",
  "description": "Search your Netlify sites, domains, and team members",
  "icon": "icon.png",
  "author": "destiner",
  "contributors": [
    "jonohewitt",
    "jasonbarry"
  ],
  "categories": [
    "Developer Tools",
    "Web"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-sites",
      "title": "Search Sites",
      "subtitle": "Netlify",
      "description": "Search your sites",
      "mode": "view"
    },
    {
      "name": "find-sites-on-disk",
      "title": "Find Sites on Disk",
      "subtitle": "Netlify",
      "description": "Find your Netlify sites that you have saved locally",
      "mode": "view"
    },
    {
      "name": "search-audit-log",
      "title": "Search Audit Log",
      "subtitle": "Netlify",
      "description": "Search your team's audit log",
      "mode": "view"
    },
    {
      "name": "list-domains",
      "title": "List Domains",
      "subtitle": "Netlify",
      "description": "List your domains",
      "mode": "view"
    },
    {
      "name": "list-members",
      "title": "List Members",
      "subtitle": "Netlify",
      "description": "List team members",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Personal access token",
      "placeholder": "Your token"
    },
    {
      "name": "scanPath",
      "type": "textfield",
      "required": true,
      "default": "",
      "title": "Path to scan for Netlify directories",
      "description": "Path to scan for Netlify directories. ~/ is expanded. Use : to seperate multiple paths"
    },
    {
      "name": "scanDepth",
      "type": "dropdown",
      "required": true,
      "title": "Max scan depth",
      "data": [
        {
          "title": "2",
          "value": "2"
        },
        {
          "title": "3",
          "value": "3"
        },
        {
          "title": "4",
          "value": "4"
        },
        {
          "title": "5",
          "value": "5"
        },
        {
          "title": "6",
          "value": "6"
        }
      ],
      "description": "Maximum depth to scan for Netlify directories",
      "default": "3"
    },
    {
      "name": "textEditor",
      "type": "appPicker",
      "required": true,
      "title": "Default Text Editor",
      "description": "Default application when opening a site on disk",
      "default": "Visual Studio Code"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.42.0",
    "@raycast/utils": "^1.4.14",
    "axios": "^0.24.0",
    "parse-git-config": "^3.0.0",
    "parse-github-url": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.8.3",
    "@types/parse-git-config": "^3.0.1",
    "@types/parse-github-url": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
